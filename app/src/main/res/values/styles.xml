<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- Text Styles -->
    <style name="AppTheme.NormalText">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="AppTheme.CommentText" parent="AppTheme.NormalText">
        <item name="android:textColor">@color/secondaryText</item>
    </style>

    <style name="AppTheme.SmallText">
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

</resources>
